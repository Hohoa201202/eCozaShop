@model eCozaStore.Models.TblCustomer

@{
    ViewData["Title"] = "Đăng ký";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<section class="ftco-section">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6 text-center mb-5">
                <h2 class="heading-section">ĐĂNG KÝ</h2>
            </div>
        </div>
        <form asp-action="Register" asp-controller="Home">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row justify-content-center">
                <div class="col-md-6 col-lg-4">
                    <div class="login-wrap p-0">

                        <div class="flex-m form-group">
                            <input asp-for="FullName" placeholder="Họ và tên..." class="form-control" autocomplete="off" />
                            <span asp-validation-for="FullName" class="text-danger"></span>
                        </div>

                        <div class="flex-m form-group">
                            <input required asp-for="Phone" placeholder="Số điện thoại..." class="form-control" autocomplete="off" />
                            <span asp-validation-for="Phone" class="text-danger"></span>
                        </div>

                        <div class="flex-m form-group">
                            <input asp-for="Email" placeholder="Địa chỉ Email..." class="form-control" autocomplete="off" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div

                        <div class="flex-m form-group">
                            <input required placeholder="Mật khẩu..." asp-for="Password" class="form-control" autocomplete="off" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="form-group" style="margin-top: 36px">
                            <button type="submit" class="form-control btn btn-primary submit px-3">ĐĂNG KÝ</button>
                        </div>

                    </div>
                </div>

                <div class="row justify-content-center">
                    <div class="col-md-6 col-lg-4">
                         <p class="w-100 text-center" style="text-align: center">@ViewBag.Error</p>
                         <p class="w-100 text-center">&mdash; Bạn đã có tài khoản ! <a asp-action="Login" asp-controller="Home">Đăng nhập</a> &mdash;</p>
                     </div>
                </div>
            </div>
        </form>
    </div>
</section>


