
@model eCozaStore.Models.AccountLogin;

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<section class="ftco-section">
	<div class="container">
		<div class="row justify-content-center">
			<div class="col-md-6 text-center mb-5">
				<h2 class="heading-section">ĐĂNG NHẬP</h2>
			</div>
		</div>
		<div class="row justify-content-center">
			<div class="col-md-6 col-lg-4">
				<div class="login-wrap p-0">
					<form asp-action="Login" asp-controller="Home" method="post">
						<div class="form-group">
							<input type="number" type="text" class="form-control" asp-for="Phone" placeholder="Nhập số điện thoại..." autocomplete="off">
						</div>
						<div class="form-group">
							<input id="password-field" type="password" name="Password" class="form-control" asp-for="Password" placeholder="Nhập mật khẩu..." autocomplete="off">
							<span toggle="#password-field" class="fa fa-fw fa-eye field-icon toggle-password"></span>
						</div>
						<div class="form-group">
							<button type="submit" class="form-control btn btn-primary submit px-3">ĐĂNG NHẬP</button>
						</div>
						<div class="form-group d-md-flex">
							<div class="w-50">
								<label class="checkbox-wrap checkbox-primary">
									Nhớ mật khẩu
									<input type="checkbox" checked>
									<span class="checkmark"></span>
								</label>
							</div>
							<div class="w-50 text-md-right">
								<a asp-route="ForgotPass" style="color: #fff">Quên mật khẩu</a>
							</div>
						</div>
					</form>
					<p class="w-100 text-center" style="text-align: center">@ViewBag.Error</p>
					<p class="w-100 text-center">&mdash; Bạn chưa có tài khoản ! <a asp-action="Register" asp-controller="Home">Đăng ký</a> &mdash;</p>
					<p class="w-100 text-center">&mdash; Hoặc đăng nhập bằng &mdash;</p>
					<div class="social d-flex text-center">
						<a href="#" class="px-2 py-2 mr-md-1 rounded"><span class="ion-logo-facebook mr-2"></span> Facebook</a>
						<a href="#" class="px-2 py-2 ml-md-1 rounded"><span class="ion-logo-twitter mr-2"></span> Twitter</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>