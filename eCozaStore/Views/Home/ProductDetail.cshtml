@using eCozaStore.Models;
@using eCozaStore.Helpers;
@model IList<ViewImageProduct>

@{
    ViewData["Title"] = @Model.First().ProductName;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="p-d-desktop">
    <!-- breadcrumb -->
    <div class="container">
        <div class="bread-crumb flex-w p-l-25 p-r-15 p-t-30 p-lr-0-lg">
            <a asp-controller="Home" asp-action="Index" class="stext-109 cl8 hov-cl1 trans-04">
                Home
                <i class="fa fa-angle-right m-l-9 m-r-10" aria-hidden="true"></i>
            </a>

            <a href="/pages/blog.html" class="stext-109 cl8 hov-cl1 trans-04">
                Sản phẩm
                <i class="fa fa-angle-right m-l-9 m-r-10" aria-hidden="true"></i>
            </a>

            <span class="stext-109 cl4">
                @Model.First().ProductName
            </span>
        </div>
    </div>

    <!-- Product Detail -->
    <section class="sec-product-detail bg0 p-t-65 p-b-60">
        <div class="container">

            <!--Thông tin sản phẩm-->
            <div class="row wow fadeInUp" data-wow-delay="0.1s">
                <div class="col-md-6 col-lg-7 p-b-30">
                    <div class="p-l-25 p-r-30 p-lr-0-lg">
                        <div class="wrap-slick3 flex-sb flex-w">
                            <div class="wrap-slick3-dots"></div>
                            <div class="wrap-slick3-arrows flex-sb-m flex-w"></div>

                            @if (Model.FirstOrDefault().ImagePath != null)
                            {
                                <div class="slick3 gallery-lb">
                                    @foreach (var item in Model)
                                    {
                                        <div class="item-slick3" data-thumb="../files/images/products/@item.ImagePath">
                                            <div class="wrap-pic-w pos-relative">
                                                <img src="~/files/images/products/@item.ImagePath" alt="IMG-PRODUCT">

                                                <a class="flex-c-m size-108 how-pos1 bor0 fs-16 cl10 bg0 hov-btn3 trans-04" href="../files/images/products/@item.ImagePath">
                                                    <i class="fa fa-expand"></i>
                                                </a>
                                            </div>
                                        </div>
                                    }
                                </div>
                            }
                            else
                            {
                                <div class="slick3 gallery-lb">
                                    <div class="item-slick3" data-thumb="@Model.First().Thumb">
                                        <div class="wrap-pic-w pos-relative">
                                            <img src="@Model.First().Thumb" alt="IMG-PRODUCT">

                                            <a class="flex-c-m size-108 how-pos1 bor0 fs-16 cl10 bg0 hov-btn3 trans-04" href="@Model.First().Thumb">
                                                <i class="fa fa-expand"></i>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>

                <div class="col-md-6 col-lg-5 p-b-30" style="">
                    <div class="p-r-50 p-t-5 p-lr-0-lg">
                        <h4 class="mtext-105 cl2 js-name-detail p-b-14">
                            @Html.DisplayFor(model => model.FirstOrDefault().ProductName)
                        </h4>

                        <span class="mtext-106 cl2">
                            @Html.DisplayFor(model => model.FirstOrDefault().Price) đ
                        </span>

                        <p class="stext-102 cl3 p-t-23">
                            @Html.DisplayFor(model => model.FirstOrDefault().Title)
                        </p>

                        <!--  -->
                        <form asp-route="addcart" class="p-t-33">
                            <input type="hidden" name="ProductID" value="@Model.First().ProductId" />
                            <div class="flex-w flex-r-m p-b-10">
                                <div class="size-203 flex-c-m respon6" style="justify-content: flex-start; width: 75px">
                                    Size:
                                </div>

                                <div class="size-204 respon6-next">
                                    <div class="rs1-select2 bor8 bg0">
                                        <select class="js-select2" name="time">
                                            <option>Choose an option</option>
                                            <option>Size S</option>
                                            <option>Size M</option>
                                            <option>Size L</option>
                                            <option>Size XL</option>
                                        </select>
                                        <div class="dropDownSelect2"></div>
                                    </div>
                                </div>
                            </div>

                            <div class="flex-w flex-r-m p-b-10">
                                <div class="size-203 flex-c-m respon6" style="justify-content: flex-start; width: 75px">
                                    Màu sắc:
                                </div>

                                <div class="size-204 respon6-next">
                                    <div class="rs1-select2 bor8 bg0">
                                        <select class="js-select2" name="time">
                                            <option>Choose an option</option>
                                            <option>Red</option>
                                            <option>Blue</option>
                                            <option>White</option>
                                            <option>Grey</option>
                                        </select>
                                        <div class="dropDownSelect2"></div>
                                    </div>
                                </div>
                            </div>

                            <div class="flex-w flex-r-m p-b-10">
                                <div class="size-203 flex-c-m respon6" style="justify-content: flex-start; width: 75px">
                                    Số lượng:
                                </div>

                                <div class="size-204 respon6-next">
                                    <div class="rs1-select2 bg0">
                                        <div class="wrap-num-product flex-w ">
                                            <div class="btn-num-product-down cl8 hov-btn3 trans-04 flex-c-m">
                                                <i class="fs-16 zmdi zmdi-minus"></i>
                                            </div>

                                            <input name="Quantity" class="mtext-104 cl3 txt-center num-product" type="number" name="num-product" value="1">

                                            <div class="btn-num-product-up cl8 hov-btn3 trans-04 flex-c-m">
                                                <i class="fs-16 zmdi zmdi-plus"></i>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="flex-w flex-r-m p-b-10" style="margin-top: 20px;">
                                <div class="size-204 flex-w flex-m respon6-next" style="justify-content: space-between">
                                    <button class="flex-c-m stext-101 cl0 size-101 bg1 bor1 hov-btn1 p-lr-15 trans-04 js-addcart-detail" style="min-width: 0; boder-radius: 50%;">
                                        <i class="fa-solid fa-cart-plus" style="padding-right: 8px"></i>
                                        THÊM VÀO GIỎ HÀNG
                                    </button>
                                </div>
                            </div>

                            <div class="flex-w flex-m p-l-100 p-t-40 respon7">
                                <div class="flex-m bor9 p-r-10 m-r-11">
                                    <a href="#" class="fs-14 cl3 hov-cl1 trans-04 lh-10 p-lr-5 p-tb-2 js-addwish-detail tooltip100" data-tooltip="Add to Wishlist">
                                        <i class="zmdi zmdi-favorite"></i>
                                    </a>
                                </div>

                                <a href="#" class="fs-14 cl3 hov-cl1 trans-04 lh-10 p-lr-5 p-tb-2 m-r-8 tooltip100" data-tooltip="Facebook">
                                    <i class="fa-brands fa-facebook"></i>
                                </a>

                                <a href="#" class="fs-14 cl3 hov-cl1 trans-04 lh-10 p-lr-5 p-tb-2 m-r-8 tooltip100" data-tooltip="Twitter">
                                    <i class="fa-brands fa-facebook-messenger"></i>
                                </a>

                                <a href="#" class="fs-14 cl3 hov-cl1 trans-04 lh-10 p-lr-5 p-tb-2 m-r-8 tooltip100" data-tooltip="Google Plus">
                                    <i class="fa fa-google-plus"></i>
                                </a>
                            </div>
                        </form>
                        <!--  -->
                    </div>
                </div>
            </div>

            <div class="bor10 m-t-50 p-t-43 p-b-40 wow fadeInUp" data-wow-delay="0.1s" style="box-shadow: 0px 0px 4px rgb(0 0 0 / 22%); border-radius: 50px; margin-top: -25px">
                <!-- Tab01 -->
                <div class="tab01">
                    <!-- Nav tabs -->
                    <ul class="nav nav-tabs" role="tablist">
                        <li class="nav-item p-b-10">
                            <a class="nav-link active" data-toggle="tab" href="#reviews" role="tab" style="font-size: 18px;">ĐÁNH GIÁ</a>
                        </li>

                        <li class="nav-item p-b-10">
                            <a class="nav-link" data-toggle="tab" href="#description" role="tab" style="font-size: 18px;">MÔ TẢ</a>
                        </li>

                        @*<li class="nav-item p-b-10">
                        <a class="nav-link" data-toggle="tab" href="#information" role="tab">Thông số</a>
                        </li>*@
                    </ul>

                    <!-- Tab panes -->
                    <div class="tab-content p-t-43">

                        <!-- - -->
                        <div class="tab-pane fade show active" id="reviews" role="tabpanel">
                            <div class="row">
                                <div class="col-sm-10 col-md-8 m-lr-auto">
                                    <div class="m-lr-15-sm">

                                        <!-- Dach sách các đánh giá-->
                                        @await Component.InvokeAsync("FeedbackView", new {productID = Model.FirstOrDefault().ProductId})

                                        @*@if (ViewBag.IsLogin == true)
                                        {*@
                                            <!-- Add review -->
                                            <form asp-action="ProductDetail" asp-controller="Home" method="post" class="w-full m-t-68">

                                                <h5 class="mtext-108 cl2 p-b-7" style="font-size: 18px">
                                                    GỬI ĐÁNH GIÁ
                                                </h5>

                                                <input type="hidden" name="ProductId" value="@Model.LastOrDefault().ProductId" />

                                                <div class="flex-w flex-m p-b-4">
                                                    <span class="wrap-rating fs-18 cl11 pointer">
                                                        <i class="item-rating pointer zmdi zmdi-star"></i>
                                                        <i class="item-rating pointer zmdi zmdi-star"></i>
                                                        <i class="item-rating pointer zmdi zmdi-star"></i>
                                                        <i class="item-rating pointer zmdi zmdi-star"></i>
                                                        <i class="item-rating pointer zmdi zmdi-star"></i>
                                                        <input class="dis-none" type="number" name="Sstart">
                                                    </span>
                                                </div>

                                                <div class="row p-b-25">
                                                    <div class="col-12 p-b-5">
                                                        <label class="stext-102 cl3" for="review"></label>
                                                        <textarea name="Content" class="size-110 bor8 stext-102 cl2 p-lr-20 p-tb-10" id="review" placeholder="Mời bạn nhập nội dung..." style="border-radius: 10px;" required></textarea>
                                                    </div>
                                                </div>

                                                <div asp-validation-summary="All" class="text-danger" style="text-align: center;"></div>

                                                <button class="flex-c-m stext-101 cl0 size-112 bg7 bor11 hov-btn3 p-lr-15 trans-04 m-b-10">
                                                    Đánh giá
                                                </button>
                                            </form>
                                       @* }
                                        else{
                                            <!-- Add review -->
                                            <div class="w-full m-t-68">

                                                <h5 class="mtext-108 cl2 p-b-7" style="font-size: 18px">
                                                    GỬI ĐÁNH GIÁ
                                                </h5>

                                                <div class="row p-b-25">
                                                    <div class="col-12 p-b-5">
                                                        <label style="font-style: italic;" class="stext-102 cl3 text-danger" for="review">Bạn cần đăng nhập và mua hàng mới có thể viết đánh giá cho sản phẩm này !</label>
                                                    </div>
                                                    <div class="flex-m" >

                                                        <a asp-route="Login" style="min-width: 123px; height: 42px; border: 1px solid #333; background-color: #fff;" class=" flex-c-m stext-101 cl0  bor1 hov-btn1 p-lr-15 trans-04 stext-102 cl2 hov-cl1 trans-04">
                                                            Đăng nhập
                                                        </a>

                                                    </div>
                                                </div>
                                            </div>
                                        }*@
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- - -->
                        <div class="tab-pane fade" id="description" role="tabpanel">
                            <div class="how-pos2 p-lr-15-md">
                                <p class="stext-102 cl6">
                                    Dành cho những bạn trẻ thích phong cách trẻ trung, hip-hop. Ecoza chúng tôi muốn gửi đến bạn một sự lựa chọn đồng hành với bạn trong mọi hoạt động, thể thao, vui chơi. @Model.First().ProductName là một sản phẩm vừa đảm bảo yếu tố chất lượng cũng như mẫu mã mà bạn khó có thể tìm được sản phẩm thay thế.
                                </p>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </section>


    <!-- Related Products -->
    @await Component.InvokeAsync("RelatedProductsView", new {CateID = Model.FirstOrDefault().CategoryId});
    <!-- Related Products END -->

</div>