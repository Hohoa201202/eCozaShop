@using eCozaStore.Models;
@using eCozaStore.Utilities;
@model IList<TblCategory>

<div class="bg_slider-style">
	<div class="bg_slider" style="background-image: url(./files/images/background/customer_bg.webp)">
		<div class="container padding-top-bottom wow fadeInUp" data-wow-delay="0.1s">
			<div class="section-title text-center position-relative pb-3 mb-5 mx-auto" style="max-width: 600px;">
				<h1 class="mb-0 txt-center respon1 text-white">DANH MỤC NỔI BẬT </h1>
			</div>
			<div class="row">
				@foreach (var item in Model.Where(p => p.HomeFlag == true).OrderBy(m => m.CategoryOrder).Take(3))
				{
					string Url = Functions.TitleSlugGeneration("list", item.CategoryName, item.CategoryId);

					<div class="col-md-6 col-lg-4 p-b-30 m-lr-auto wow slideInUp" data-wow-delay="0.3s">
						<!-- Block1 -->
						<div class="block1 wrap-pic-w">
							<img src="@item.Thumb" alt="IMG-BANNER">
							<a href="/@Url" class="block1-txt ab-t-l s-full flex-col-l-sb p-lr-38 p-tb-34 trans-03 respon3">
								<div class="block1-txt-child1 flex-col-l">
									<span class="block1-name ltext-102 trans-04 p-b-8">
										@item.ShortName
									</span>

									<span class="block1-info stext-102 trans-04">
										@item.Title
									</span>
								</div>

								<div class="block1-txt-child2 p-b-4 trans-05">
									<div class="block1-link stext-101 cl0 trans-09">
										Xem ngay
									</div>
								</div>
							</a>
						</div>
					</div>
				}
			</div>
		</div>
	</div>
</div>
