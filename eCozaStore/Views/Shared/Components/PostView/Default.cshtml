@using eCozaStore.Models;
@using eCozaStore.Utilities;
@model IList<ViewPostCat>


<!-- Blog -->
<div class="container padding-top-bottom wow fadeInUp" data-wow-delay="0.1s">
	<div class="section-title text-center position-relative pb-3 mb-5 mx-auto" style="max-width: 600px;">
		<h1 class="mb-0 respon1">BLOG</h1>
	</div>
	<div class="row g-5">
		@foreach (var item in Model.Where(p => p.IsActive == true).OrderByDescending(m => m.Sview).Take(3))
		{

			string Url = Functions.TitleSlugGeneration("blogDetail", item.Title, item.PostId);

			<div class="col-lg-4 col-md-6 m-lr-auto wow slideInUp" data-wow-delay="0.3s">
				<div class="blog-item bg-light rounded overflow-hidden">
					<div class="blog-item bg-light rounded overflow-hidden">
						<div class="blog-img position-relative overflow-hidden">
							<a href="@Url"style="height: 24rem; display: block">
								<img class="img-fluid width-full-style" src="@item.Thumb" alt="Ảnh @item.Title" style="height: 100%; object-fit: cover;">
								@*<a href="@Url" class="position-absolute top-0 start-0 bg-primary text-white rounded-end mt-5 py-2 px-4">@item.CategoryName</a>*@
							</a>
						</div>
						<div class="p-4">
							<div class="d-flex mb-3">
								<small class="me-3"><i class="far fa-user text-primary me-2"></i>@item.Author</small>
								<small><i class="far fa-calendar-alt text-primary me-2"></i>@item.CreatedDate.Value.ToString("dd/MM/yyyy")</small>
								<small style="margin-left: 1.4rem;"><i class="fa-sharp fa-solid fa-eye text-primary me-2"></i>@item.Sview</small>
							</div>
							<h4 class="mb-3 title-style">@item.Title</h4>
							<p class="title-style">@item.Abstract</p>
							<a href="/@Url" class="text-uppercase text-link-color-style">Xem thêm <i class="bi bi-arrow-right"></i></a>
						</div>
					</div>
				</div>
			</div> <!-- col.// -->
		}
	</div> <!-- row.// -->
</div>
<!-- Blog END -->