@using eCozaStore.Models;
@using eCozaStore.Utilities;
@model IList<TblProduct>

<div class="p-t-65 wow fadeInUp" data-wow-delay="0.1s">
	<div class="section-title section-title-sm position-relative pb-3 mb-4">
		<h4 class="mtext-112 cl2 section-title section-title-sm">
			Sản phẩm nổi bật
		</h4>
	</div>

	<ul style="padding: 0">
		@foreach (var item in Model)
		{
			string Url = Functions.TitleSlugGeneration("product", item.ProductName, item.ProductId);
			<li class="flex-w flex-t p-b-30">
				<a href="/@Url" class="wrao-pic-w size-214 m-r-20">
					<img style="width: 100%" src="@item.Thumb" alt="Ảnh sản phẩm @item.ProductName">
				</a>

				<div class="size-215 flex-col-t">
					<a href="/@Url" class="stext-116 cl8 hov-cl1 trans-04">
						@item.ProductName
					</a>

					<span class="stext-116 cl6 p-t-20">
						@String.Format("{0:0,00}", item.Price) đ
					</span>
				</div>
			</li>
		}
	</ul>
</div>