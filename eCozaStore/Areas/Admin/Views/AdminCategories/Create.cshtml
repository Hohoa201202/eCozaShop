@model eCozaStore.Models.TblCategory
@{
    ViewData["Title"] = "Tạo mới danh mục";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="pagetitle">
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Home" asp-action="Index">Trang chủ</a></li>
            <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="AdminCategories" asp-action="Index">Danh sách danh mục</a></li>
            <li class="breadcrumb-item active">Tạo mới danh mục</li>
        </ol>
    </nav>
</div><!-- End Page Title -->


<section class="section">
    <div class="row">
        <div class="col-lg-12">

            <div class="card">
                <div class="card-body" style="padding: 50px ;">
                    <form asp-controller="AdminCategories" asp-action="Create" method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        
                        <div class="card">
                            <div class="card-body">
                                <div class="row d-flex align-items-center justify-content-between">

                                    <div class="col-6">
                                        <ul class="nav nav-tabs nav-tabs-bordered d-flex" id="borderedTabJustified" role="tablist" style="margin-bottom: 30px !important; padding: 50px 0 0 0 !important;">
                                            <li class="nav-item flex-fill" role="presentation">
                                                <button class="nav-link w-100 active" id="home-tab" data-bs-toggle="tab"
                                                        data-bs-target="#bordered-justified-home" type="button" role="tab" aria-controls="home"
                                                        aria-selected="true">
                                                    Thông tin cơ bản
                                                </button>
                                            </li>
                                            <li class="nav-item flex-fill" role="presentation">
                                                <button class="nav-link w-100" id="profile-tab" data-bs-toggle="tab"
                                                        data-bs-target="#bordered-justified-profile" type="button" role="tab" aria-controls="profile"
                                                        aria-selected="false" tabindex="-1">
                                                    Thông tin SEO
                                                </button>
                                            </li>
                                            <li class="nav-item flex-fill" role="presentation">
                                                <button class="nav-link w-100" id="contact-tab" data-bs-toggle="tab"
                                                        data-bs-target="#bordered-justified-contact" type="button" role="tab" aria-controls="contact"
                                                        aria-selected="false" tabindex="-1">
                                                    Mô tả thêm
                                                </button>
                                            </li>
                                        </ul>
                                    </div>
                                    <div class="col-6" style="text-align: -webkit-right !important;">

                                        <button class="btn btn-primary">
                                            <i class="anticon anticon-save"></i>
                                            <span>Save</span>
                                        </button>

                                    </div>
                                </div>
                            </div>

                        </div>
                        <div class="card" style="padding-top: 50px !important">
                            <div class="card-body">
                                <div class="tab-content pt-2" id="borderedTabJustifiedContent">

                                    <div class="tab-pane fade show active" id="bordered-justified-home" role="tabpanel" aria-labelledby="home-tab">

                                        <div asp-validation-summary="All" class="text-danger"></div>
                                        <div class="row mb-4">
                                            <label for="inputText" class="col-sm-2 col-form-label">Tên danh mục</label>
                                            <div class="col-sm-10">
                                                <input type="text" class="form-control" asp-for="CategoryName">
                                            </div>
                                        </div>
                                        <div class="row mb-4">
                                            <label class="col-sm-2 col-form-label">Danh mục cha</label>
                                            <div class="col-sm-10">
                                                
                                                    <select class="form-select" aria-label="Default select example" asp-for="ParentId" asp-items="@ViewBag.CategoryList">
                                                        <option value="All" selected="" disabled="">Chọn danh mục cha</option>
                                                    </select>
                                                
                                            </div>
                                        </div>


                                        <div class="row mb-4">
                                            <label for="inputText" class="col-sm-2 col-form-label">Thứ tụ sắp xếp</label>
                                            <div class="col-sm-10">
                                                <input type="number" asp-for="CategoryOrder" class="form-control">
                                            </div>
                                        </div>



                                        <div class="row mb-4">
                                            <label for="Thumb" class="col-sm-2 col-form-label">Ảnh đại diện</label>
                                            <div class="col-sm-10">
                                                <div class="input-group mb-3">
                                                    <div class="input-group-prepend">
                                                        <button class="btn btn-secondary" type="button" onclick="openDialog()">Chọn ảnh</button>
                                                    </div>
                                                    <input asp-for="Thumb" type="text" class="form-control" id="file_input" aria-describedby="button-addon2" />
                                                    <span asp-validation-for="Thumb" class="text-danger"></span>

                                                </div>
                                            </div>
                                          
                                        </div>

                                        <div class="row mb-4">
                                            <label for="inputNumber" class="col-sm-2 col-form-label">Trạng thái</label>
                                            <div class="col-sm-10">
                                                <div class="form-check form-switch" style="padding-bottom: 8px !important;">
                                                    <input asp-for="IsActive" class="form-check-input" type="checkbox" id="flexSwitchCheckDefault">
                                                    <label for="Active" class="form-check-label">Công khai</label>
                                                </div>

                                            </div>
                                        </div>



                                    </div>

                                    <div class="tab-pane fade" id="bordered-justified-profile" role="tabpanel" aria-labelledby="profile-tab">

                                        <div class="row mb-4">
                                            <label for="inputText" class="col-sm-2 col-form-label">Title</label>
                                            <div class="col-sm-10">
                                                <input asp-for="Title" type="text" class="form-control">
                                            </div>
                                        </div>

                                        <div class="row mb-4">
                                            <label for="inputText" class="col-sm-2 col-form-label">MetaDesc</label>
                                            <div class="col-sm-10">
                                                <input asp-for="MetaDesc" type="text" class="form-control">
                                            </div>
                                        </div>

                                        <div class="row mb-4">
                                            <label for="inputText" class="col-sm-2 col-form-label">MetaKey</label>
                                            <div class="col-sm-10">
                                                <input asp-for="MetaKey" type="text" class="form-control">
                                            </div>
                                        </div>

                                        <div class="row mb-4">
                                            <label for="inputText" class="col-sm-2 col-form-label">SchemaMarkup: </label>
                                            <div class="col-sm-10">
                                                <input asp-for="SchemaMarkup" type="text" class="form-control">
                                            </div>
                                        </div>





                                    </div>

                                    <div class="tab-pane fade" id="bordered-justified-contact" role="tabpanel" aria-labelledby="contact-tab">
                                        <textarea id="Description" asp-for="Description" style="width: 100% !important; min-height: 400px !important;"></textarea>
                                    </div>
                                </div><!-- End Bordered Tabs Justified -->

                            </div>
                        </div>


                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

@*Kích hoạt summernote*@


@{
    var summerNote = new eCozaStore.Areas.Admin.Models.SummerNote("#Description");

    <partial name="_SummerNote" model="summerNote" />
}