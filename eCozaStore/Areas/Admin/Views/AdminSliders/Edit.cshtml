@model eCozaStore.Models.TblSlider
@{
    ViewData["Title"] = "Chỉnh sửa slider";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


<div class="pagetitle">
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Home" asp-action="Index">Trang chủ</a></li>
            <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="AdminSliders" asp-action="Index">Danh sách slider</a></li>
            <li class="breadcrumb-item active">Chỉnh sửa slider</li>
        </ol>
    </nav>
</div><!-- End Page Title -->


<section class="section">
    <div class="row">
        <div class="col-lg-12">

            <div class="card">
                <div class="card-body" style="padding: 50px ;">
                    <form asp-controller="AdminSliders" asp-action="Edit" method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="SliderId" />
                        <div class="card">
                            <div class="card-body">

                                <div class="row d-flex align-items-center justify-content-between">

                                    <div class="col-6">
                                        <ul class="nav nav-tabs nav-tabs-bordered d-flex" id="borderedTabJustified" role="tablist" style="margin-bottom: 30px !important; padding: 50px 0 0 0 !important;">
                                            <li class="nav-item flex-fill" role="presentation">
                                                <button class="nav-link w-100 active" id="home-tab" data-bs-toggle="tab"
                                                        data-bs-target="#bordered-justified-home" type="button" role="tab" aria-controls="home"
                                                        aria-selected="true">
                                                    Thông tin chi tiết
                                                </button>
                                            </li>
                                            <li class="nav-item flex-fill" role="presentation">
                                                <button class="nav-link w-100" id="contact-tab" data-bs-toggle="tab"
                                                        data-bs-target="#bordered-justified-contact" type="button" role="tab" aria-controls="contact"
                                                        aria-selected="false" tabindex="-1">
                                                    Mô tả thêm
                                                </button>
                                            </li>
                                        </ul>
                                    </div>

                                    <div class="col-6" style="text-align: -webkit-right !important;">

                                        <button class="btn btn-primary">
                                            <i class="anticon anticon-save"></i>
                                            <span>Save</span>
                                        </button>

                                    </div>
                                </div>
                            </div>

                        </div>
                        <div class="card" style="padding-top: 50px !important">
                            <div class="card-body">
                                <div class="tab-content pt-2" id="borderedTabJustifiedContent">
                                    <div asp-validation-summary="All" class="text-danger"></div>
                                    <div class="tab-pane fade show active" id="bordered-justified-home" role="tabpanel" aria-labelledby="home-tab">

                                        <div class="row mb-4">
                                            <label for="inputText" class="col-sm-2 col-form-label">Tiêu đề</label>
                                            <div class="col-sm-10">
                                                <input type="text" class="form-control" asp-for="Title">
                                            </div>
                                        </div>

                                        <div class="row mb-4">
                                            <label for="inputText" class="col-sm-2 col-form-label">Mô tả ngắn</label>
                                            <div class="col-sm-10">
                                                <input type="text" class="form-control" asp-for="Abstract">
                                            </div>
                                        </div>

                                        <div class="row mb-4">
                                            <label class="col-sm-2 col-form-label">Danh mục</label>
                                            <div class="col-sm-10">
                                                <select class="form-select" aria-label="Default select example" asp-for="CategoryID" asp-items="ViewBag.DanhMuc">
                                                    <option value="All" selected="" disabled="">Chọn danh mục</option>

                                                </select>
                                            </div>
                                        </div>


                                        <div class="row mb-4">
                                            <label for="Thumb" class="col-sm-2 col-form-label">Ảnh đại diện</label>
                                            <div class="col-sm-10">
                                                <div class="input-group mb-3">
                                                    <div class="input-group-prepend">
                                                        <button class="btn btn-secondary" type="button" onclick="openDialog()">Chọn ảnh</button>
                                                    </div>
                                                    <input asp-for="Images" type="text" class="form-control" id="file_input" aria-describedby="button-addon2" />
                                                    <span asp-validation-for="Images" class="text-danger"></span>

                                                </div>
                                            </div>

                                        </div>

                                        <div class="row mb-4">
                                            <label for="inputText" class="col-sm-2 col-form-label">Vị trí</label>
                                            <div class="col-sm-10">
                                                <input type="number" class="form-control" asp-for="Position">
                                            </div>
                                        </div>

                                        <div class="row mb-4">
                                            <label for="inputText" class="col-sm-2 col-form-label">Thứ tự</label>

                                            <div class="col-sm-10">
                                                <input type="number" class="form-control" asp-for="SliderOrder">
                                            </div>
                                        </div>

                                        <div class="row mb-4">
                                            <label for="inputNumber" class="col-sm-2 col-form-label">Trạng thái</label>
                                            <div class="col-sm-10">

                                                <div class="d-flex">
                                                    <div class="col-md-4 form-check form-switch" style="padding-bottom: 8px !important;">
                                                        <input asp-for="IsActive" class="form-check-input" type="checkbox" id="flexSwitchCheckDefault">
                                                        <label for="IsActive" class="form-check-label">Công khai</label>
                                                    </div>

                                                </div>
                                            </div>
                                        </div>


                                    </div>

                                    <div class="tab-pane fade" id="bordered-justified-contact" role="tabpanel" aria-labelledby="contact-tab">
                                        <textarea asp-for="Description" id="Description"> </textarea>

                                    </div>

                                </div><!-- End Bordered Tabs Justified -->

                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>


    </div>
</section>


@*Kích hoạt summernote*@


@{
    var summerNote = new eCozaStore.Areas.Admin.Models.SummerNote("#Description");

    <partial name="_SummerNote" model="summerNote" />
}


