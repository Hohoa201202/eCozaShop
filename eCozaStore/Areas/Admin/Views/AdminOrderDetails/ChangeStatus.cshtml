@model eCozaStore.Models.TblOrder
@{
    ViewData["Title"] = "Cập nhật trạng thái đơn hàng : " + @Model.Customer.FullName;
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


 <div class="pagetitle">
       <nav>
           <ol class="breadcrumb">
               <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Home" asp-action="Index">Trang chủ</a></li>
                <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="AdminOrderDetails" asp-action="Index">Danh sách đơn hàng</a></li>
                <li class="breadcrumb-item active">Cập nhật trạng thái đơn hàng: @Model.Customer.FullName</li>
            </ol>
        </nav>
  </div><!-- End Page Title -->

<section class="section">
    <div class="row">
        <div class="col-lg-12">

            <div class="card">
                <div class="card-body" style="padding: 50px ;">
                    <form asp-area="Admin" asp-controller="AdminOrderDetails" asp-action="ChangeStatus" asp-route-id="@Model.OrderId" method="post" enctype="multipart/form-data">
                        <input type="hidden" asp-for="OrderId"/>
                        <div class="card" style="padding: 50px 0 !important">
                            <div class="card-body">

                                <div class="table table-bordered" style="display: flex; justify-content: flex-start; ">
                                    <ul style="padding-left: 0rem; width: 60%;">



                                        <li style="display: flex; line-height: 0px; justify-content: flex-start; width: 100%;">
                                            <p style="width: 30%;  font-weight: 600;">Họ và tên: </p>
                                            <p style="font-weight: 800;">@Model.Customer.FullName</p>
                                        </li>

                                        <li style="display: flex; line-height: 0px; justify-content: flex-start; width: 100%;">
                                            <p style="width: 30%;  font-weight: 600;">Số điện thoại: </p>
                                            <p>@Model.Customer.Phone</p>
                                        </li>

                                        <li style="display: flex; line-height: 0px; justify-content: flex-start; width: 100%;">
                                            <p style="width: 30%;  font-weight: 600;">Địa chỉ: </p>
                                            <p>@Model.Customer.Address</p>
                                        </li>




                                    </ul>
                                    <ul style="padding-left: 0rem; width: 40%;">



                                        <li style="display: flex; line-height: 0px; justify-content: flex-start; width: 100%;">
                                            <p style="width: 40%;  font-weight: 600;">Ngày mua: </p>
                                            <p style="text-align: right;  width: 60%;">@Model.OrderDate</p>
                                        </li>

                                        <li style="display: flex; line-height: 0px; justify-content: flex-start; width: 100%;">
                                            <p style="width: 40%;  font-weight: 600;">Ngày giao hàng: </p>
                                            <p style="text-align: right;   width: 60%;">@Model.ShipDate</p>
                                        </li>

                                        <li style="display: flex; line-height: 0px; justify-content: flex-start; width: 100%;">
                                            <p style="width: 40%;  font-weight: 600;">Trạng thái: </p>
                                            <p style="text-align: right;  width: 60%;">@Model.TransactStatus.Status</p>
                                        </li>




                                    </ul>
                                </div>

                                <table class="table table-bordered">
                                    <div class="mb-3">
                                        <label for="inputText" class="col-sm-2 col-form-label">Thay đổi trạng thái</label>
                                        <div class="col-sm-4">
                                            <select class="form-select" aria-label="Default select example" asp-for="TransactStatusId" asp-items="ViewBag.OrderStatus" class="form-control"> </select>
                                        </div>
                                    </div>

                                    
                                   
                                    <div class="mb-3">
                                    <div class="col-sm-12">
                                        <input type="submit" value="Lưu lại" class="btn btn-primary" />
                                    </div>

                                </div>
                                        
                                </table>

                            </div>

                        </div>

                    </form>
                </div>
            </div>
        </div>


    </div>
</section>
