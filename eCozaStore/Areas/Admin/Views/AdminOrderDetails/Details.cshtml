@model eCozaStore.Models.TblOrder
@{
    ViewData["Title"] = "Chi tiết đơn hàng";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    List<TblOrderDetail> tblOrderDetails = ViewBag.OrderDetails;
}



    <div class="pagetitle">
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Home" asp-action="Index">Trang chủ</a></li>
                <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="AdminOrderDetails" asp-action="Index">Danh sách đơn hàng</a></li>
                <li class="breadcrumb-item active">Chi tiết đơn hàng : @Model.Customer.FullName</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->

    <section class="section">
        <div class="row">
            <div class="col-lg-12">

                <div class="card">
                    <div class="card-body" style="padding: 50px ;">
                        <form>  
                            <div class="card" style="padding: 50px 0 !important">
                                <div class="card-body">

                                    <div class="table table-bordered" style="display: flex; justify-content: flex-start; ">
                                        <ul style="padding-left: 0rem; width: 60%;">



                                            <li style="display: flex; line-height: 0px; justify-content: flex-start; width: 100%;">
                                            <p style="width: 30%;  font-weight: 600;">Họ và tên: </p>
                                                <p style="font-weight: 800;">@Model.Customer.FullName</p>
                                            </li>

                                            <li style="display: flex; line-height: 0px; justify-content: flex-start; width: 100%;">
                                                <p style="width: 30%;  font-weight: 600;">Số điện thoại: </p>
                                                <p>@Model.Customer.Phone</p>
                                            </li>

                                            <li style="display: flex; line-height: 0px; justify-content: flex-start; width: 100%;">
                                                <p style="width: 30%;  font-weight: 600;">Địa chỉ: </p>
                                                <p>@Model.Customer.Address</p>
                                            </li>




                                        </ul>
                                        <ul style="padding-left: 0rem; width: 40%;">



                                            <li style="display: flex; line-height: 0px; justify-content: flex-start; width: 100%;">
                                                <p style="width: 40%;  font-weight: 600;">Ngày mua: </p>
                                                @if(Model.OrderDate != null) {
                                                    <p style="text-align: right;  width: 60%;">@Model.OrderDate.Value.ToString("hh:mm [dd/MM/yyyy]")</p>

                                                }
                                            </li>

                                            <li style="display: flex; line-height: 0px; justify-content: flex-start; width: 100%;">
                                                <p style="width: 40%;  font-weight: 600;">Ngày giao hàng: </p>
                                                @if(Model.ShipDate != null) {
                                                    <p style="text-align: right;   width: 60%;">@Model.ShipDate.Value.ToString("hh:mm [dd/MM/yyyy]")</p>
                                                }
                                            </li>

                                            <li style="display: flex; line-height: 0px; justify-content: flex-start; width: 100%;">
                                                <p style="width: 40%;  font-weight: 600;">Trạng thái: </p>
                                                <p style="text-align: right;  width: 60%;">@Model.TransactStatus.Status</p>
                                            </li>




                                        </ul>
                                    </div>
                                  
                                        <table class="table table-bordered">
                                                <thead>
                                                    <tr>
                                                        <th scope="col">#</th>
                                                        <th scope="col">Tên sản phẩm</th>
                                                        <th scope="col">Số lượng</th>
                                                        <th scope="col">Giá</th>
                                                        <th scope="col">Tổng tiền</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @if (tblOrderDetails != null && tblOrderDetails.Count() > 0)
                                                    {
                                                        int i = 1;
                                                        foreach (var item in tblOrderDetails)
                                                        {
                                                            <tr>
                                                                <th scope="row">@i</th>
                                                                <td>@item.Product.ProductName</td>
                                                                <td>@item.Quantity</td>
                                                                <td>@item.Product.Price.Value.ToString("#,### VNĐ")</td>
                                                                <td>@item.Total.Value.ToString("#,### VNĐ")</td>
                                                            </tr>
                                                        }
                                                    }
                                                </tbody>
                                            </table>
                                      
                                    </div>

                            </div>
                       
                    </form>
                </div>
            </div>
        </div>


    </div>
</section>
