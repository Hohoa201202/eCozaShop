@using eCozaStore.Models
@model IList<ViewOrder>


<div class="card recent-sales overflow-auto">

    <div class="filter">
        <a class="icon" href="#" data-bs-toggle="dropdown"><i class="bi bi-three-dots"></i></a>
        <ul class="dropdown-menu dropdown-menu-end dropdown-menu-arrow">
            <li class="dropdown-header text-start">
                <h6>Filter</h6>
            </li>

            <li><a class="dropdown-item" href="#">Hôm nay</a></li>
            <li><a class="dropdown-item" href="#">Tháng nay</a></li>
            <li><a class="dropdown-item" href="#">Năm nay</a></li>
        </ul>
    </div>

    <div class="card-body">
        <h5 class="card-title">Bán hàng gần đây <span>| Hôm nay</span></h5>

        <table class="table table-borderless datatable">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Khách hàng</th>
                    <th scope="col">Sản phẩm</th>
                    <th scope="col">Giá</th>
                    <th scope="col">Trạng thái</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <th scope="row"><a href="#">@item.ProductId</a></th>
                        <td>@item.FullName</td>
                        <td><a href="#" class="text-primary">@item.ProductName</a></td>
                        @if (item.Total != null)
                        {
                            <td>@item.Total.Value.ToString("#,# $")</td>
                        }
                        <td>
                            @if (item.TransactStatusId == 1)
                            {
                                <span class="badge bg-secondary">@item.Status</span>
                            }

                            @if (item.TransactStatusId == 2)
                            {
                                <span class="badge bg-info">@item.Status</span>
                            }

                            @if (item.TransactStatusId == 3)
                            {
                                <span class="badge bg-primary">@item.Status</span>
                            }

                            @if (item.TransactStatusId == 4)
                            {
                                <span class="badge bg-success">@item.Status</span>
                            }

                            @if (item.TransactStatusId == 5)
                            {
                                <span class="badge bg-danger">@item.Status</span>
                            }
                            @if (item.TransactStatusId == 6)
                            {
                                <span class="badge bg-warning">@item.Status</span>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>

</div>

